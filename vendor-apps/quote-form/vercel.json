{
  "rewrites": [
    {
      "source": "/api/vendors/:path*",
      "destination": "https://api.thebluelotusfoods.com/vendors/:path*"
    },
    {
      "source": "/api/dictionary/:path*",
      "destination": "https://api.thebluelotusfoods.com/dictionary/:path*"
    },
    {
      "source": "/api/fish/:path*",
      "destination": "https://api.thebluelotusfoods.com/fish/:path*"
    },
    {
      "source": "/api/quotes/:path*",
      "destination": "https://api.thebluelotusfoods.com/quotes/:path*"
    },
    {
      "source": "/:path((?!api).*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options", 
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}