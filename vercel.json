{
  "buildCommand": "cd vendor-apps/quote-form && npm install && npm run build",
  "outputDirectory": "vendor-apps/quote-form/dist",
  "installCommand": "cd vendor-apps/quote-form && npm install",
  "framework": "vite",
  "rewrites": [
    {
      "source": "/quotes/:vendorName",
      "destination": "/index.html"
    },
    {
      "source": "/quotes/:vendorName/:path*",
      "destination": "/:path*"
    },
    {
      "source": "/api/vendors/:path*",
      "destination": "https://api.thebluelotusfoods.com/vendors/:path*"
    },
    {
      "source": "/api/dictionary/:path*",
      "destination": "https://api.thebluelotusfoods.com/dictionary/:path*"
    },
    {
      "source": "/api/fish/:path*",
      "destination": "https://api.thebluelotusfoods.com/fish/:path*"
    },
    {
      "source": "/api/quotes/:path*",
      "destination": "https://api.thebluelotusfoods.com/quotes/:path*"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options", 
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}
